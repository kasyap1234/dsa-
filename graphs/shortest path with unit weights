#include <iostream>
#include <vector>
#include <queue>

using namespace std;
void BFS(vector<int> adj[], int N, int src)
{
    
    queue<int> q;
    dist[src] = 0;
    q.push(src);
    while (!q.empty())
    {
        int node = q.front();
        q.pop();
        for (auto itr : adj[node])
        {
            if (dist[node] + 1 < dist[itr])
            {
                dist[itr] = 1 + dist[node];
                q.push(it);
            }
        }
    }
}

